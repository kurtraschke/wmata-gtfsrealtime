<?xml version="1.0" encoding="UTF-8"?>

<ehcache
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='http://ehcache.org/ehcache.xsd'>
    
    <diskStore path="java.io.tmpdir"/>
    
    <!-- Eventually some of these will have diskPersistent turned on,
         so that the state of the mappings is preserved across restarts. -->
    <cache name="wmataapi" overflowToDisk="true" diskPersistent="true" timeToIdleSeconds="86400" maxEntriesLocalHeap="5" />
    
    <cache name="wmatabusroute" overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="3600" maxEntriesLocalHeap="500" />
    <cache name="wmatarailroute" overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="3600" maxEntriesLocalHeap="10" />
    
    <cache name="wmatatrip" overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="3600" maxEntriesLocalHeap="1000" />
    <cache name="wmatastopbyid" overflowToDisk="true" diskPersistent="false" timeToIdleSeconds="3600" maxEntriesLocalHeap="5000" />
    <cache name="wmatalaststopfortrip" overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="3600" maxEntriesLocalHeap="1000" />
    
</ehcache>
